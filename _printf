#include <stdio.h>
#include <stdarg.h>
#include <string.h>
#include <unistd.h>
#include main.h

int _printf(const char *format, ...){

	va_list ars;
	va_start(ars, format);

	while (*format) {
		if (*format == '%') {
		format++;
		switch (*format){
		case 'c':
		{
		char ch = va_arg(ars, int);
		write(1, &ch, 1);
		break;
		}

		case 's':
		{
		const char *st = va_arg(ars, const char *);
			write(1, st, strlen(st));
			break;
		}

		case '%':
		write(1, "%", 1);
		break;

		default:
			write(1, "%", 1);
			write(1, format, 1);
			break;
		}
		}
	else
	{
	write(1, format, 1);
	}
	format++;
	}
        va_end(ars);
}

int main(void) {

	_printf("welcome: %c %c %c, String: %s", 'A', 'B', 'C', "How are you");

	return 0;
}
